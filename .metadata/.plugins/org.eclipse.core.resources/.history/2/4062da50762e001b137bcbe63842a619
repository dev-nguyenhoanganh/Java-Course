package com.luvina.cacpheptoan.pheptoan;

public class PrimeNumber {
	private int number;
	
	public PrimeNumber() {
		number = 0;
	}
	
	public PrimeNumber(int number) {
		this.number = number;
	}
	
	public void phanTichThuaSo() {
		String 	factor  	  = "";
		boolean isFirstNumber = true;
		int 	tempNumber    = number;
		
		for (int i = 2; i < Math.sqrt(number); i++) 
		{
			if(tempNumber % i == 0) {
				if(isFirstNumber) {
					isFirstNumber = false;
					tempNumber 	  = number / i;
					factor 		 += i--;
					continue;
				}
				tempNumber = number / i;
				factor 	  += " * "  + i--; 
			}
		}
		System.out.print("Thừa số nguyên tố của " + number + " là: ");
		System.out.println(factor);
	}
	
	public void kiemTraSNT() {
		if(isPrimeNumber(number)) {
			System.out.println(this.number + " là số nguyên tố.");
		}
		else
			System.out.println(this.number + " không phải số nguyên tố.");
	}
	
	private boolean isPrimeNumber(int number) {
		if(number < 2) return false;
		for(int i = 2; i < number; i++) {
			if(number % i == 0) return false;
		}
		return true;
	}
	
	
}
