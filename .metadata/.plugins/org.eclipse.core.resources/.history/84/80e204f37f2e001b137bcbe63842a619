package com.luvina.smartfinder.smartfinder;

public class SmartFinder {
	private long number;
	
	public SmartFinder() {
		this.number = 0;
	}
	
	public SmartFinder(long number) {
		this.number = number;
	}
	
	public boolean checkSymmetry() {
		if(number < 10) return false;
		int halfLength = lengthOfNumber(number) / 2;
		for(int i = 0; i <= halfLength; i++) {
			if(number / Math.pow(10, halfLength - i) != number / Math.pow(10, halfLength + i))
				return false;
		}
		return true;
	}
	
	public void result() {
		System.out.println(checkSymmetry());
	}
	
	private int lengthOfNumber(long number) {
		int length = 0;
		while (number >= 10) {
			number /= 10;
			length++;
		}
		return length;
	}
	
	
}
