package com.luvina.uocchungvaboichung.tinhtoan;

public class Caculation {
	private int num1;
	private int num2;
	
	/**
	 * Phương thức khởi tạo không tham số
	 */
	public Caculation() {
		this.num1 = 0;
		this.num2 = 0;
	}
	
	/**
	 * Phương thức khởi tạo có tham số
	 * @param num1 - Giá trị cho số 
	 * @param num2
	 */
	public Caculation (int num1, int num2) {
		this.num1 = num1;
		this.num2 = num2;
	}
	
	public int timUCLN() {
		int max  = (num1 <= num2) ? num2 : num1;
		int UCLN = 1;
		for(int i = 1; i <= max; i++) {
			if((num1 % i == 0) && (num2 % i == 0)) {
				UCLN = i;
			}
		}
		return UCLN;
	}
	
	public int timBCNN() {
		int UCLN = timUCLN();
		return num1 * num2 / UCLN;
	}
	
	public void result() {
		System.out.println("Ước chung lớn nhất của " + num1 + " và " + num2 + " là: " + timUCLN());
		System.out.println("Bội chung nhỏ nhất của " + num1 + " và " + num2 + " là: " + timBCNN());
	}
}
